#!/usr/bin/env bash

function install-doom {
	if [ ! -e ~/.emacs.d ]; then
		git clone --depth 1 https://github.com/hlissner/doom-emacs ~/.emacs.d
		ln -s ~/.emacs.d/bin/doom ~/.local/bin
		yes | doom install
	fi
}

function install-ubuntu {
	sudo apt update
	sudo apt install emacs-nox ripgrep
}

case $1 in
	doom)
		install-doom
		;;
	ubuntu)
		install-ubuntu
		;;
esac
